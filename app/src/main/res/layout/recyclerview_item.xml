<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:padding="8dp"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content" tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/userAvatar"
            android:layout_weight="1" android:contentDescription="@string/userAvatar"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/firstNameTV"
            android:text="@string/firstnameExample"
            app:layout_constraintStart_toEndOf="@+id/userAvatar" android:layout_marginStart="24dp"
            app:layout_constraintTop_toTopOf="@+id/userAvatar"/>
    <TextView
            android:text="@string/lastnameExample"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/lastNameTV"
            app:layout_constraintStart_toEndOf="@+id/firstNameTV"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/firstNameTV"/>
    <TextView
            android:text="@string/emailExample"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/emailTV"
            app:layout_constraintStart_toEndOf="@+id/userAvatar"
            android:layout_marginStart="24dp" app:layout_constraintTop_toBottomOf="@+id/lastNameTV"
            android:layout_marginTop="8dp"/>
</android.support.constraint.ConstraintLayout>